Proceso Numero_positivo_negativo_o_cero
	Definir num1 Como Real;
	Escribir "Ingrese un numero";
	leer num1;
	Si num1 > 0 Entonces
		Escribir num1, " Es un numero positivo";
	FinSi
	
	Si num1 < 0 Entonces
		Escribir num1, " Es un numero negativo";
	FinSi
	
	Si num1 = 0 Entonces
		Escribir " El numero ingresado es 0";
	FinSi
FinProceso
